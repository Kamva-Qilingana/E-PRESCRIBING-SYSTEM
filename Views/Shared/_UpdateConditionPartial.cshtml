@model E_PRESCRIBING_SYSTEM.Models.Condition

<div class="modal-header">
    <h5 class="modal-title">Update Condition</h5>
    <button type="button" class="close" onclick="closeModal('updateConditionModal')">&times;</button>
</div>

<form id="updateConditionForm" asp-action="UpdateCondition" method="post">
    <input type="hidden" name="ConditionID" value="@Model.ConditionID" />

    <div class="form-group">
        <label for="Diagnosis">Diagnosis</label>
        <input type="text" id="Diagnosis" name="Diagnosis" class="form-control" value="@Model.Diagnosis" required />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Update</button>
        <button type="button" class="btn btn-secondary" onclick="closeModal('updateConditionModal')">Cancel</button>
    </div>
</form>

