@model E_PRESCRIBING_SYSTEM.Models.Prescription

@{
    ViewBag.Title = "Add Prescription";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Add Prescription</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.PatientProfileId, "Patient")
        @Html.DropDownList("PatientProfileId", ViewBag.PatientProfileId as SelectList, "Select a Patient", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.PatientProfileId)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.PharmacyMedicationId, "Medication")
        @Html.DropDownList("PharmacyMedicationId", ViewBag.PharmacyMedicationId as SelectList, "Select Medication", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.PharmacyMedicationId)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Quantity)
        @Html.TextBoxFor(model => model.Quantity, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Quantity)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.PrescriptionDate, "Date")
        @Html.TextBoxFor(model => model.PrescriptionDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
        @Html.ValidationMessageFor(model => model.PrescriptionDate)
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
}

<p>
    <a href="@Url.Action("Index", "Surgeon")" class="btn btn-secondary">Back to List</a>
</p>
