@model E_PRESCRIBING_SYSTEM.Models.VitalSignPageViewModel

@{
    ViewBag.Title = "Manage Vital Signs";
    Layout = "~/Views/Shared/_NurseLayout.cshtml";
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        .tab-container {
            margin-top: 50px;
        }

        .tabs {
            display: flex;
            cursor: pointer;
            border-bottom: 2px solid #ccc;
        }

        .tab {
            padding: 10px 20px;
            border: 1px solid #ccc;
            border-bottom: none;
            background-color: #f0f0f0;
            margin-right: 5px;
        }

            .tab.active {
                background-color: #fff;
                font-weight: bold;
            }

        .tab-content {
            display: none;
            padding: 20px;
            background-color: #fff;
            border: 1px solid #ccc;
        }

            .tab-content.active {
                display: block;
            }
    </style>
</head>

<div class="tab-container">
    <!-- Tab Headers -->
    <div class="tabs">
        <div class="tab active" onclick="showTab(event, 'addVitalTab')">Add Vital Sign</div>
        <div class="tab" onclick="showTab(event, 'viewVitalsTab')">View Vital Signs</div>
    </div>

    <!-- Add Vital Sign Tab -->
    <div id="addVitalTab" class="tab-content active">
        <h4><i class="fas fa-heartbeat me-2"></i>Add Vital Sign</h4>
        <form asp-action="AddVital" method="post">
            @Html.AntiForgeryToken()

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="NewVitalSign.PatientProfileId" class="form-label">Select Patient:</label>
                    <select asp-for="NewVitalSign.PatientProfileId" asp-items="ViewBag.PatientList" class="form-select">
                        <option value="">-- Select Patient --</option>
                    </select>
                    <span asp-validation-for="NewVitalSign.PatientProfileId" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="NewVitalSign.BodyTemperature" class="form-label">Body Temperature (°C)</label>
                    <input asp-for="NewVitalSign.BodyTemperature" class="form-control" />
                    <span asp-validation-for="NewVitalSign.BodyTemperature" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="NewVitalSign.HeartRate" class="form-label">Heart Rate (bpm)</label>
                    <input asp-for="NewVitalSign.HeartRate" class="form-control" />
                    <span asp-validation-for="NewVitalSign.HeartRate" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="NewVitalSign.BloodOxygenSaturation" class="form-label">Oxygen Saturation (%)</label>
                    <input asp-for="NewVitalSign.BloodOxygenSaturation" class="form-control" />
                    <span asp-validation-for="NewVitalSign.BloodOxygenSaturation" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="NewVitalSign.Height" class="form-label">Height (cm)</label>
                    <input asp-for="NewVitalSign.Height" class="form-control" />
                    <span asp-validation-for="NewVitalSign.Height" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="NewVitalSign.Weight" class="form-label">Weight (kg)</label>
                    <input asp-for="NewVitalSign.Weight" class="form-control" />
                    <span asp-validation-for="NewVitalSign.Weight" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-success w-100">
                    <i class="fas fa-check-circle me-2"></i>Submit Vital Sign
                </button>
            </div>
        </form>
    </div>

    <!-- View Vital Signs Tab -->
    <div id="viewVitalsTab" class="tab-content">
        <h4><i class="fas fa-list me-2"></i>Existing Vital Signs</h4>

        <table class="table table-bordered table-striped">
            <thead class="table-light">
                <tr>
                    <th>Patient ID</th>
                    <th>Temp (°C)</th>
                    <th>Heart Rate</th>
                    <th>O₂ Sat (%)</th>
                    <th>Height (cm)</th>
                    <th>Weight (kg)</th>
                    <th>Recorded At</th>
                    <th>By</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.ExistingVitalSigns != null && Model.ExistingVitalSigns.Any())
                {
                    foreach (var item in Model.ExistingVitalSigns)
                    {
                        <tr>
                            <td>@item.PatientProfile?.PSurname</td>
                            <td>@item.BodyTemperature</td>
                            <td>@item.HeartRate</td>
                            <td>@item.BloodOxygenSaturation</td>
                            <td>@item.Height</td>
                            <td>@item.Weight</td>
                            <td>@item.RecordedAt.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@item.Username</td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="8" class="text-center text-muted">No vital signs recorded yet.</td></tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function showTab(event, tabId) {
            const tabs = document.querySelectorAll('.tab');
            const contents = document.querySelectorAll('.tab-content');

            tabs.forEach(tab => tab.classList.remove('active'));
            contents.forEach(content => content.classList.remove('active'));

            document.getElementById(tabId).classList.add('active');
            event.currentTarget.classList.add('active');
        }
    </script>
}
