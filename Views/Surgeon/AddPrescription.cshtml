

@model E_PRESCRIBING_SYSTEM.Models.NewPrescriptionViewModel

@{
    ViewData["Title"] = "Add Prescription";
    Layout = "~/Views/Shared/_SurgeonLayout.cshtml";
}

<head>
    <link rel="stylesheet" href="~/css/AddMedicationScreen.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        .medication-row {
            margin-bottom: 15px;
            border: 1px solid #ccc;
            padding: 15px;
            border-radius: 10px;
            background-color: #f9f9f9;
        }

        .remove-btn {
            margin-top: 32px;
        }

        .button-container {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
        }
    </style>
</head>

<div class="container mt-5">
    <h2 class="mb-4"><i class="fas fa-prescription me-2"></i>Add Prescription</h2>

    <div class="button-container">
       @*  <a href="@Url.Action("AdmissionList", "Nurse")" class="btn btn-info btn-sm">
            <i class="fas fa-list me-1"></i> Admission List
        </a> *@
        @Html.ActionLink("Prescription List", "PrescriptionListSurgeon", "Surgeon", null, new { @class = "btn btn-secondary btn-sm" })
    </div>

    <form asp-action="AddPrescription" method="post">
        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="PatientProfileId" class="form-label"></label>
                <select asp-for="PatientProfileId" class="form-select" asp-items="ViewBag.Patients">
                    <option value="">-- Select Patient --</option>
                </select>
            </div>
        </div>

        <div id="medications-container">
            <div class="medication-row row">
                <div class="col-md-4">
                    <label>Medication</label>
                    <select name="Medications[0].PharmacyMedicationId" class="form-select" asp-items="ViewBag.Medications">
                        <option value="">-- Select Medication --</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label>Quantity</label>
                    <input type="number" name="Medications[0].Quantity" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label>Instruction</label>
                    <input type="text" name="Medications[0].Instruction" class="form-control" />
                </div>
                <div class="col-md-1 d-flex align-items-end">
                    <button type="button" class="btn btn-danger remove-btn" onclick="removeMedication(this)">
                        <i class="fas fa-trash-alt"></i>
                    </button>
                </div>
            </div>
        </div>

        <button type="button" class="btn btn-secondary mb-3" onclick="addMedication()">
            <i class="fas fa-plus-circle me-1"></i> Add Medication
        </button>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Status" class="form-label"></label>
                <select asp-for="Status" class="form-select">
                    <option value="" disabled selected>Select Status</option>
                    <option value="Prescribe">Prescribe</option>
                </select>
            </div>
            <div class="col-md-6">
                <label for="DataAdded" class="form-label">Prescription Date</label>
                <input type="date" id="DataAdded" name="DataAdded" class="form-control" />
            </div>
        </div>

        <div class="form-check mb-4">
            <input asp-for="IsAgent" class="form-check-input" type="checkbox" />
            <label asp-for="IsAgent" class="form-check-label">
                Is this prescription made by an urgent?
            </label>
        </div>

        <button type="submit" class="btn btn-primary">
            <i class="fas fa-paper-plane me-1"></i> Submit Prescription
        </button>
    </form>
</div>

@section Scripts {
    <script>
        let medicationIndex = 0;

        function addMedication() {
            medicationIndex++;
            const container = document.getElementById('medications-container');
            const newRow = document.querySelector('.medication-row').cloneNode(true);

            newRow.querySelectorAll('input, select').forEach((el) => {
                const nameAttr = el.getAttribute('name');
                if (nameAttr) {
                    el.setAttribute('name', nameAttr.replace(/\[\d+\]/, `[${medicationIndex}]`));
                }
                el.value = '';
            });

            container.appendChild(newRow);
        }

        function removeMedication(button) {
            const container = document.getElementById('medications-container');
            if (container.children.length > 1) {
                button.closest('.medication-row').remove();
            }
        }
    </script>
}
