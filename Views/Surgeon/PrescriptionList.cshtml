@model IEnumerable<E_PRESCRIBING_SYSTEM.Models.NewPrescription>

@{
    ViewData["Title"] = "Prescription List";
    Layout = "~/Views/Shared/_PharmacistLayout.cshtml";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .table thead th {
            background-color: #e9ecef;
            font-weight: 600;
        }

        .badge {
            font-size: 0.85rem;
            padding: 0.35em 0.7em;
        }

        .card {
            border-radius: 1rem;
            box-shadow: 0 0.125rem 0.25rem rgb(0 0 0 / 0.075);
        }

        .filter-section {
            background: white;
            padding: 1rem 1.5rem;
            border-radius: 0.75rem;
            box-shadow: 0 0 10px rgb(0 0 0 / 0.05);
            margin-bottom: 2rem;
        }

        .btn-sm {
            min-width: 90px;
        }

        ul.med-list {
            padding-left: 1rem;
            margin-bottom: 0;
        }

            ul.med-list li {
                margin-bottom: 0.5rem;
            }
    </style>
</head>

<div class="container my-5">
    <h2 class="mb-4 text-primary"><i class="bi bi-list-ul me-2"></i>Prescription List</h2>

    <!-- Search Form -->
    <form method="get" asp-action="PrescriptionList" asp-controller="Surgeon" class="filter-section">
        <div class="row g-3 align-items-end">
            <div class="col-md-6">
                <label for="patientIdSearch" class="form-label fw-semibold">Search by Patient ID Number:</label>
                <input type="text" name="patientIdSearch" id="patientIdSearch" class="form-control" placeholder="Enter Patient ID" value="@ViewBag.PatientIDSearch" />
            </div>
            <div class="col-md-6 d-flex gap-2">
                <button type="submit" class="btn btn-primary d-flex align-items-center">
                    <i class="bi bi-search me-2"></i>Search
                </button>
                <a href="@Url.Action("PrescriptionList", "Surgeon")" class="btn btn-outline-secondary d-flex align-items-center">
                    <i class="bi bi-x-circle me-2"></i>Clear
                </a>
            </div>
        </div>
    </form>

    <!-- Status & Urgency Filters -->
    <form method="get" asp-action="PrescriptionList" asp-controller="Surgeon" class="filter-section">
        <div class="row g-3">
            <div class="col-md-6">
                <strong>Status:</strong>
                <div class="form-check form-check-inline ms-3">
                    <input class="form-check-input" type="radio" name="statusFilter" value="Prescribe"
                           onchange="this.form.submit()" @(ViewBag.SelectedStatus == "Prescribe" ? "checked" : "") />
                    <label class="form-check-label">Prescribe</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="statusFilter" value="Dispensed"
                           onchange="this.form.submit()" @(ViewBag.SelectedStatus == "Dispensed" ? "checked" : "") />
                    <label class="form-check-label">Dispensed</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="statusFilter" value="Rejected"
                           onchange="this.form.submit()" @(ViewBag.SelectedStatus == "Rejected" ? "checked" : "") />
                    <label class="form-check-label">Rejected</label>
                </div>
            </div>
            <div class="col-md-6">
                <strong>Urgency:</strong>
                <div class="form-check form-check-inline ms-3">
                    <input class="form-check-input" type="radio" name="agentFilter" value="Agent"
                           onchange="this.form.submit()" @(ViewBag.SelectedAgentStatus == "Agent" ? "checked" : "") />
                    <label class="form-check-label">Urgent</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="agentFilter" value="Non-Agent"
                           onchange="this.form.submit()" @(ViewBag.SelectedAgentStatus == "Non-Agent" ? "checked" : "") />
                    <label class="form-check-label">Non-Urgent</label>
                </div>
            </div>
        </div>
    </form>

    <!-- Prescription Table -->
    <div class="table-responsive shadow rounded-3 bg-white">
        <table class="table table-bordered table-hover align-middle mb-0">
            <thead>
                <tr>
                    <th>Patient ID</th>
                    <th>Patient Name</th>
                    <th>Surgeon</th>
                    <th>Date Added</th>
                    <th>Agent Type</th>
                    <th>Status</th>
                    <th>Medications</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="8" class="text-center text-muted py-4">No prescriptions found.</td>
                    </tr>
                }
                else
                {
                    foreach (var prescription in Model)
                    {
                        <tr>
                            <td class="align-middle">@prescription.PatientProfile.PatientIDno</td>
                            <td class="align-middle">@prescription.PatientProfile.PatientName @prescription.PatientProfile.PSurname</td>
                            <td class="align-middle">@prescription.Username</td>
                            <td class="align-middle">@prescription.DateAdded.ToString("yyyy-MM-dd")</td>
                            <td class="align-middle">
                                <span class="badge bg-@(prescription.IsAgent ? "danger" : "info")">
                                    @(prescription.IsAgent ? "Urgent" : "Non-Urgent")
                                </span>
                            </td>
                            <td class="align-middle">
                                <span class="badge bg-secondary">@prescription.Status</span>
                            </td>
                            <td class="align-middle">
                                <ul class="med-list">
                                    @foreach (var medication in prescription.PrescriptionMedications)
                                    {
                                        <li>
                                            <strong>@medication.PharmacyMedication.Name</strong><br />
                                            Quantity: @medication.Quantity<br />
                                            Instruction: @medication.Instruction
                                        </li>
                                    }
                                </ul>
                            </td>
                            <td class="align-middle">
                                <a asp-action="ManagePrescription" asp-controller="Surgeon" asp-route-prescriptionId="@prescription.PrescriptionId"
                                   class="btn btn-outline-primary btn-sm d-flex align-items-center gap-1">
                                    <i class="bi bi-pencil-square fs-5"></i> Manage
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
