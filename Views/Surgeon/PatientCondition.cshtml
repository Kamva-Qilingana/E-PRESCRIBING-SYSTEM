@model E_PRESCRIBING_SYSTEM.Models.PatientCondition

@{
    ViewBag.Title = "Add Patient Condition";
    Layout = "~/Views/Shared/_SurgeonLayout.cshtml";
}

<h2>Add Patient Condition</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Patient Condition</h4>
        <hr />

        <div class="form-group">
            @Html.LabelFor(m => m.PatientProfileId, "Patient Profile", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.PatientProfileId, ViewBag.PatientProfileId as SelectList, "Select a Patient", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.PatientProfileId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.ConditionID, "Condition", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.ConditionID, ViewBag.ConditionID as SelectList, "Select a Condition", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ConditionID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.DiagnosisDate, "Diagnosis Date", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.DiagnosisDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                @Html.ValidationMessageFor(m => m.DiagnosisDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add Condition" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", "PatientCondition")
</div>
