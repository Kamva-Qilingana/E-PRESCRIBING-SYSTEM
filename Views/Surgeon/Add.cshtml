@model E_PRESCRIBING_SYSTEM.Models.PatientAllergy

@{
    ViewBag.Title = "Add Patient Allergy";
    Layout = "~/Views/Shared/_NurseLayout.cshtml";
}

<h2>Add Patient Allergy</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Patient Allergy</h4>
        <hr />

        <div class="form-group">
            @Html.LabelFor(m => m.PatientProfileId, "Patient Profile", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.PatientProfileId, ViewBag.PatientProfileId as SelectList, "Select a Patient", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.PatientProfileId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.ActiveIngredientsID, "Active Ingredient", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.ActiveIngredientsID, ViewBag.ActiveIngredientsID as SelectList, "Select an Ingredient", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ActiveIngredientsID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.AllergyDescription, "Allergy Description", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.AllergyDescription, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.AllergyDescription, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add Allergy" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", "PatientAllergy")
</div>
