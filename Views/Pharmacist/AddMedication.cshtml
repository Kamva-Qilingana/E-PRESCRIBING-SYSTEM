@model E_PRESCRIBING_SYSTEM.Models.PharmacyMedication

@{
    ViewData["Title"] = "Add Medication";
    Layout = "~/Views/Shared/_PharmacistLayout.cshtml";
}

<head>
    <link rel="stylesheet" href="~/css/AddMedicationScreen.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <style>
        .ingredient-row {
            margin-bottom: 15px;
            padding: 10px;
            border: 1px solid #dee2e6;
            border-radius: 10px;
            background-color: #f8f9fa;
        }

        .ingredient-row .btn-danger {
            margin-top: 30px;
        }
    </style>
</head>

<div class="container mt-5">
    <h2 class="mb-4"><i class="bi bi-capsule me-2"></i>Add Medication</h2>

    <p>
        <a asp-action="MedicationList" asp-controller="Pharmacist" class="btn btn-primary btn-sm">
            <i class="bi bi-list-ul me-1"></i> Medication List
        </a>
    </p>

    <form asp-action="AddMedication" method="post">
        <div class="row mb-3">
            <div class="col-md-6">
                <label for="Name" class="form-label">Medication Name</label>
                <input type="text" id="Name" name="Name" class="form-control" required />
            </div>

            <div class="col-md-6">
                <label for="DosageForm" class="form-label">Dosage Form</label>
                <select asp-for="DosageFormID" asp-items="ViewBag.DosageFormID" class="form-select" required>
                    <option selected disabled>Select dosage</option>
                </select>
            </div>
        </div>

        <div class="mb-4">
            <label class="form-label">Active Ingredients</label>
            <div id="activeIngredientsContainer">
                <div class="ingredient-row row">
                    <div class="col-md-5">
                        <select class="form-select" name="selectedIngredients"  required>
                            <option selected disabled >Select Active Ingredient</option>
                            @if (ViewBag.ActiveIngredientsID != null)
                            {
                                foreach (var item in ViewBag.ActiveIngredientsID)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            }
                            else
                            {
                                <option value="">Not Available</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-5">
                        <input type="text" name="ingredientStrengths" class="form-control" placeholder="Strength" required />
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="button" class="btn btn-danger" onclick="removeIngredient(this)">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>
                </div>
            </div>
            <button type="button" class="btn btn-secondary mt-2" onclick="addIngredient()">
                <i class="bi bi-plus-circle me-1"></i> Add Another Ingredient
            </button>
        </div>

        <div class="row mb-3">
            <div class="col-md-4">
                <label for="schedule" class="form-label">Schedule</label>
                <select id="schedule" name="schedule" class="form-select" required>
                    <option value="" disabled selected>Select Schedule</option>
                    @for (int i = 1; i <= 6; i++)
                    {
                        <option value="@i">@i</option>
                    }
                </select>
            </div>

            <div class="col-md-4">
                <label for="ReorderLevel" class="form-label">Re-order Level</label>
                <input type="number" id="ReorderLevel" name="ReorderLevel" class="form-control" required />
            </div>

            <div class="col-md-4">
                <label for="StockOnHand" class="form-label">Stock on Hand</label>
                <input type="number" id="StockOnHand" name="StockOnHand" class="form-control" required />
            </div>
        </div>

        <div class="text-end">
            <button type="submit" class="btn btn-success">
                <i class="bi bi-save me-1"></i> Add Medication
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        function addIngredient() {
            var firstRow = $('#activeIngredientsContainer .ingredient-row:first').clone();
            
            firstRow.find('input').val('');
            firstRow.find('select').val('');

            $('#activeIngredientsContainer').append(firstRow);
        }

        function removeIngredient(button) {
            var container = $('#activeIngredientsContainer');
            if (container.find('.ingredient-row').length > 1) {
                $(button).closest('.ingredient-row').remove();
            }
        }
    </script>
}
