@model E_PRESCRIBING_SYSTEM.Models.ReceiveStockViewModel

@{
    ViewData["Title"] = "Add Medication";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Receive Stock</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="StockID">Select Order:</label>
        <select asp-for="StockID" asp-items="ViewBag.Orders" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="ReceivedQuantity">Received Quantity:</label>
        <input asp-for="ReceivedQuantity" class="form-control" />
        <span asp-validation-for="ReceivedQuantity" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
