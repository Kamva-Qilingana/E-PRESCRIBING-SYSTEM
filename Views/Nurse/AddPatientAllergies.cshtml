@model E_PRESCRIBING_SYSTEM.Models.PatientAllergyViewModel

@{
    ViewData["Title"] = "Add Patient Allergies";
    Layout = "~/Views/Shared/_NurseLayout.cshtml";
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        .allergy-form {
            background-color: #f9f9f9;
            padding: 25px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        .form-header {
            margin-bottom: 20px;
        }

        .form-label {
            font-weight: bold;
        }
    </style>
</head>

<div class="container mt-5">
    <div class="allergy-form">
        <div class="form-header">
            <h2><i class="fas fa-allergies me-2"></i>Add Allergies for @Model.PatientName @Model.PSurname</h2>
        </div>

        <form asp-action="AddPatientAllergies" method="post">
            <div class="row mb-3">
                <div class="col-md-12">
                    <label for="AllergyDescription" class="form-label">Allergy Description</label>
                    <textarea id="AllergyDescription" name="AllergyDescription" class="form-control" rows="3" required></textarea>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-12">
                    <label for="SelectedActiveIngredients" class="form-label">Select Active Ingredients</label>
                    <select id="SelectedActiveIngredients" name="SelectedActiveIngredients" class="form-select" multiple required>
                        @foreach (var ingredient in Model.ActiveIngredientsList)
                        {
                            <option value="@ingredient.ActiveIngredientsID">@ingredient.ActiveIngredientsName</option>
                        }
                    </select>
                    <small class="text-muted">Hold Ctrl (or Command) to select multiple ingredients</small>
                </div>
            </div>

            <input type="hidden" name="PatientProfileId" value="@Model.PatientProfileId" />

            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-1"></i> Save Allergy
            </button>
            <a href="@Url.Action("PatientList", "Nurse")" class="btn btn-secondary ms-2">
                <i class="fas fa-arrow-left me-1"></i> Back to Patient List
            </a>
        </form>
    </div>
</div>
