@model E_PRESCRIBING_SYSTEM.Models.PatientCondition

@{
    ViewBag.Title = "Manage Patient Conditions";
    Layout = "~/Views/Shared/_NurseLayout.cshtml";
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        .tab-container {
            margin-top: 50px;
        }

        .tabs {
            display: flex;
            cursor: pointer;
            border-bottom: 2px solid #ccc;
        }

        .tab {
            padding: 10px 20px;
            border: 1px solid #ccc;
            border-bottom: none;
            background-color: #f0f0f0;
            margin-right: 5px;
        }

            .tab.active {
                background-color: #fff;
                font-weight: bold;
            }

        .tab-content {
            display: none;
            padding: 20px;
            background-color: #fff;
            border: 1px solid #ccc;
        }

            .tab-content.active {
                display: block;
            }
    </style>
</head>

<div class="tab-container">
    <!-- Tab headers -->
    <div class="tabs">
        <div class="tab active" onclick="showTab(event, 'addConditionTab')">Add Condition</div>
        <div class="tab" onclick="window.location.href='@Url.Action("PatientAllergies", "Nurse")'">Patient Allergy</div>

    </div>

    <!-- Add Patient Condition Form -->
    <div id="addConditionTab" class="tab-content active">
        <h4><i class="fas fa-stethoscope me-2"></i>Add Patient Condition</h4>

        <!-- Button to trigger modal -->
        <button type="button" class="btn btn-info mb-3" data-bs-toggle="modal" data-bs-target="#conditionModal">
            <i class="fas fa-eye"></i> View Patient Conditions
        </button>


        <form asp-action="PatientCondition" method="post">
            @Html.AntiForgeryToken()

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="PatientProfileId" class="form-label">Select Patient:</label>
                    <select asp-for="PatientProfileId" asp-items="ViewBag.PatientProfileId" class="form-select">
                        <option value="">-- Select Patient --</option>
                    </select>
                </div>

                <div class="col-md-6">
                    <label for="ConditionID" class="form-label">Condition(s):</label>
                    <select id="ConditionID" name="ConditionID" asp-items="ViewBag.ConditionID" class="form-select" multiple>
                    </select>
                    <small class="text-muted">Hold Ctrl (Cmd on Mac) to select multiple.</small>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="DiagnosisDate" class="form-label">Diagnosis Date:</label>
                <input asp-for="DiagnosisDate" type="date" class="form-control" />
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary w-100">Add Condition(s)</button>
            </div>
        </form>
    </div>

    <!-- View Patient Conditions Table -->
    <div id="conditionListTab" class="tab-content">
        <h4><i class="fas fa-notes-medical me-2"></i>Patient Condition List</h4>

        <table class="table table-bordered">
            <thead class="table-light">
                <tr>
                    <th>Patient Name</th>
                    <th>Condition</th>
                  @*   <th>Treatment Code</th>
                    <th>Description</th> *@
                    <th>Date Diagnosed</th>
                </tr>
            </thead>
            <tbody>
                @if (ViewBag.PatientConditions != null)
                {
                    foreach (var condition in ViewBag.PatientConditions)
                    {
                        <tr>
                            <td>@condition.PatientName</td>
                            <td>@condition.ConditionName</td>
                           @*  <td>@condition.TreatmentCode</td>
                            <td>@condition.Description</td> *@
                            <td>@condition.DateDiagnosed.ToString("yyyy-MM-dd")</td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="5" class="text-center text-muted">No patient conditions found.</td></tr>
                }
            </tbody>
        </table>
    </div>
</div>
<!-- Patient Conditions Modal -->
<div class="modal fade" id="conditionModal" tabindex="-1" aria-labelledby="conditionModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="conditionModalLabel">Patient Conditions List</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @if (ViewBag.PatientConditions != null)
                {
                    <table class="table table-striped table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th>Patient Name</th>
                                <th>Condition</th>
                                <th>Date Diagnosed</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var condition in ViewBag.PatientConditions)
                            {
                                <tr>
                                    <td>@condition.PatientName</td>
                                    <td>@condition.ConditionName</td>
                                    <td>@condition.DateDiagnosed.ToString("yyyy-MM-dd")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-muted">No patient conditions found.</p>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        function showTab(event, tabId) {
            const tabs = document.querySelectorAll('.tab');
            const contents = document.querySelectorAll('.tab-content');

            tabs.forEach(tab => tab.classList.remove('active'));
            contents.forEach(content => content.classList.remove('active'));

            document.getElementById(tabId).classList.add('active');
            event.currentTarget.classList.add('active');
        }
    </script>
}
