@model E_PRESCRIBING_SYSTEM.Models.PatientAllergy
@using E_PRESCRIBING_SYSTEM.ViewModels

@{
    ViewBag.Title = "Manage Patient Allergies";
    Layout = "~/Views/Shared/_NurseLayout.cshtml";
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        .tab-container {
            margin-top: 50px;
        }

        .tabs {
            display: flex;
            cursor: pointer;
            border-bottom: 2px solid #ccc;
        }

        .tab {
            padding: 10px 20px;
            border: 1px solid #ccc;
            border-bottom: none;
            background-color: #f0f0f0;
            margin-right: 5px;
        }

            .tab.active {
                background-color: #fff;
                font-weight: bold;
            }

        .tab-content {
            display: none;
            padding: 20px;
            background-color: #fff;
            border: 1px solid #ccc;
        }

            .tab-content.active {
                display: block;
            }
    </style>
</head>

<div class="tab-container">
    <!-- Tab headers -->
    <div class="tabs">
        <div class="tab active" onclick="showTab(event, 'addAllergyTab')">Add Allergy</div>
        <div class="tab" onclick="showTab(event, 'viewAllergyTab')">View Allergies</div>
        <div class="tab" onclick="showTab(event, 'patientConditionListTab')">Patients Condition Table</div>
    </div>

    <!-- Add Allergy Form Tab -->
    <div id="addAllergyTab" class="tab-content active">
        <h4><i class="fas fa-allergies me-2"></i>Add Patient Allergy</h4>
        <form asp-action="PatientAllergies" method="post">
            @Html.AntiForgeryToken()

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="PatientProfileId" class="form-label">Select Patient:</label>
                    <select asp-for="PatientProfileId" asp-items="ViewBag.PatientProfileId" class="form-select">
                        <option value="">-- Select Patient --</option>
                    </select>
                </div>

                <div class="col-md-6">
                    <label for="ActiveIngredientsID" class="form-label">Active Ingredient(s):</label>
                    <select id="ActiveIngredientsID" name="ActiveIngredientsID" asp-items="ViewBag.ActiveIngredientsId" class="form-select" multiple>
                    </select>
                    <small class="text-muted">Hold Ctrl (Cmd on Mac) to select multiple.</small>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="AllergyDescription" class="form-label">Allergy Description:</label>
                <textarea asp-for="AllergyDescription" class="form-control" rows="3"></textarea>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary w-100">Add Allergy</button>
            </div>
        </form>
    </div>

    <!-- View Allergy Tab (Placeholder for now) -->
    <div id="viewAllergyTab" class="tab-content">
        <h4><i class="fas fa-list me-2"></i>Patient Allergy List</h4>
        <p>You can populate this with a table of added allergies if needed.</p>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Patient Name</th>
                    <th>Active Ingredient</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.PatienAllergies)
                {
                    <tr>
                        <td>@item.PatientName</td>
                        <td>@item.ActiveIngredientName</td>
                        <td>@item.AllergyDescription</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Patient Condition Table -->
    <div id="patientConditionListTab" class="tab-content">
        <h4><i class="fas fa-notes-medical me-2"></i>Patient Condition List</h4>

        <table class="table table-bordered">
            <thead class="table-light">
                <tr>
                    <th>Patient Name</th>
                    <th>Condition</th>
                  @*   <th>Treatment Code</th>
                    <th>Description</th> *@
                    <th>Date Diagnosed</th>
                </tr>
            </thead>
            <tbody>
                @if (ViewBag.PatientConditions != null)
                {
                    foreach (var condition in ViewBag.PatientConditions)
                    {
                        <tr>
                            <td>@condition.PatientName</td>
                            <td>@condition.ConditionName</td>
                           @*  <td>@condition.TreatmentCode</td>
                            <td>@condition.Description</td> *@
                            <td>@condition.DateDiagnosed.ToString("yyyy-MM-dd")</td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="5">No patient conditions found.</td></tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        function showTab(event, tabId) {
            const tabs = document.querySelectorAll('.tab');
            const contents = document.querySelectorAll('.tab-content');

            tabs.forEach(tab => tab.classList.remove('active'));
            contents.forEach(content => content.classList.remove('active'));

            document.getElementById(tabId).classList.add('active');
            event.currentTarget.classList.add('active');
        }
    </script>
}
